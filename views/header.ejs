    <meta name="msvalidate.01" content="546E0F36F34E820C551473D7FEF318C0" />
    <link href="/favicon.ico" rel="icon" type="image/x-icon" />
    <%if(typeof article !== 'undefined'){%>
    <meta name="Keywords" content="<%= article.keywords%>"/>
    <%}else{%>
    <meta name="Keywords" content="成语大全,故事大全,诗词大全,经典语录,歇后语,谜语大全,朵朵学习,教育,学习"/>
    <%}%>
    <%if(typeof article !== 'undefined'){%>
    <meta name="Description" content="<%= article.description%>"/>
    <%}else{%>
    <meta name="Description" content="朵朵学习是关注学生对教育,学习,成语大全,故事大全,诗词大全,经典语录,歇后语,谜语大全的了解和学习。也希望帮助更多家长教育孩子新的知识。"/>
    <%}%>
    <title><%= title%></title>
    <link href="/css/style.css" type="text/css" rel="stylesheet">
    <script src="/js/jquery.js" type="text/javascript"></script>


    <script type="text/javascript">
        $(function(){
            <%if(typeof navId == 'undefined'){%>
            var url="";
            <%}else{%>
            var url="<%= navId%>";
            <%}%>

            $(".nav ul li a").each(function(){
                var durl = $(this).attr("data-url");
                if(url == durl){
                    $(this).addClass("on");
                }
                //console.log(durl);
            });

            $(".searce-btn").click(function(){
                window.location.href="/search?word="+$(".search-input").val()
            });

            $(".ban").hover(
                    function(){$(".ban i").fadeIn(200)},
                    function(){$(".ban i").hide()}
            );

            $(".tab3-tab ul li").eq(0).addClass("on");
            $(".tab3-tab ul li").click(function(){
                var i = $(".tab3-tab ul li").index(this);
                $(".tab3-tab ul li").removeClass("on");
                $(".tab3-tab ul li").eq(i).addClass("on");
                $(".tab3-tabcon ul li").hide();
                $(".tab3-tabcon ul li").eq(i).show();
            });

        });
    </script>

</head>
<body>
<div class="top">
    <div class="top_b">
        朵朵学习 -- 你身边的教育学习平台！
        <a href="#">注册新账号</a>
        <a href="/users/login">登录</a>
    </div>
</div>
<div class="header">
    <div class="head_box">
        <div class="logo"><a href="/"><img src="/images/logo.png" width="250" height="90" alt="朵朵学习"></a> </div>
        <div class="search">
            <input type="text" placeholder="请输入关键词" class="search-input" value="<% if(typeof searchWord != 'undefined'){%><%= searchWord%><%}%>">
            <input type="submit" class="searce-btn" value="">
            <p><a href="/search?word=志愿填报">志愿填报</a> <a href="/search?word=大学">大学</a> <a href="/search?word=高考">高考</a>  <a href="/search?word=学习方法">学习方法</a> <a href="/search?word=常用的谜语">常用的谜语</a> <a href="/search?word=歇后语">歇后语</a>  <a href="/search?word=势">势</a></p>
        </div>
        <div class="ban">
            <i><img src="/images/rwm.png" width="150" height="150" alt="手机二维码"></i>
        </div>
    </div>
</div>
<div class="nav">
    <ul>
        <li><a href="/" data-url="">首页</a> </li>
        <% nav.forEach(function(item){ %>
        <li><a href="<%= item.netAddress%>" data-url="<%= item._id%>"><%= item.directoryName%></a></li>
        <% }) %>
    </ul>
</div>
